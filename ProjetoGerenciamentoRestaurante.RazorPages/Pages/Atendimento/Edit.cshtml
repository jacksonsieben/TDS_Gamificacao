@page "{id:int}"
@model ProjetoGerenciamentoRestaurante.RazorPages.Pages.Atendimento.Edit

<h1>Alterar Dados do Atendimento</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @* <div asp-validation-summary="ModelOnly" class="text-dange"></div> *@
            <input type="hidden" asp-for="AtendimentoModel.AtendimentoId"/>
            <div class="form-group">
            <label asp-for="AtendimentoModel.MesaId">Numero da Mesa</label></br>
            <select asp-for="AtendimentoModel.MesaId" class="form-control">
                <option value="">Selecione o n√∫mero da Mesa</option>
                @foreach (var mesaModel in Model.MesaList)
                {
                    <option value="@mesaModel.MesaId">@mesaModel.Numero</option>
                }
            </select>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar"/>
                <a asp-page="/Atendimento/Index" class="btn btn-secondary"> Cancelar</a>
            </div>
        </form>
    </div>
</div>