@page "{id:int}"
@model ProjetoGerenciamentoRestaurante.RazorPages.Pages.Garcon.Edit


<h1>Alterar Dados do Gar√ßom</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-dange"></div>
            <input type="hidden" asp-for="GarconModel.GarconId"/>
            <div class="form-group">
                <label asp-for="GarconModel.Nome"></label>
                <input asp-for="GarconModel.Nome" class="form-control"/>
                <span asp-validation-for="GarconModel.Nome" class="text-dange"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="GarconModel.Sobrenome"></label>
                <input asp-for="GarconModel.Sobrenome" class="form-control"></textarea>
                <span asp-validation-for="GarconModel.Sobrenome" class="text-dange"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="GarconModel.Cpf"></label>
                <input asp-for="GarconModel.Cpf" class="form-control"/>
                <span asp-validation-for="GarconModel.Cpf" class="text-dange"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="GarconModel.Telefone"></label>
                <input asp-for="GarconModel.Telefone" class="form-control"/>
                <span asp-validation-for="GarconModel.Telefone" class="text-dange"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar"/>
                <a asp-page="/Events/Index" class="btn btn-secondary"> Cancelar</a>
            </div>
        </form>
    </div>
</div>